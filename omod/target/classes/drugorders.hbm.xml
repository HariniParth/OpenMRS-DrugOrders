<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.drugorders">


	<class name="drugorders"
		table="drugorders">
		<id name="id" type="int" column="id" unsaved-value="0">
			<generator class="native" />
		</id>
		<discriminator column="id" insert="false" />
                <property name="orderId"  column="order_id" not-null="false"  ></property>
		<property name="uuid" type="java.lang.String" column="uuid"
			length="38" unique="true" />
                <property name="patientid" type="java.lang.String" column="patientid" ></property>
                <property name="drugname" type="java.lang.String" column="drugname" ></property> 
                <property name="startdate" type="java.util.Date" column="startdate" ></property> 
                <property name="dose" column="dose" not-null="false" ></property> 
                <property name="doseunits" column="doseunits" ></property>
                <property name="route" column="route" ></property>
                <property name="quantity" column="quantity" not-null="false" ></property>
                <property name="quantityunits" column="quantityunits" ></property>
                <property name="duration" column="duration" not-null="false" ></property> 
                <property name="durationunits" column="durationunits" ></property>
                <property name="frequency" column="frequency" ></property>
                <property name="isallergic" column="isallergic" ></property>
                <property name="isallergicorderreasons" type="java.lang.String" column="isallergicorderreasons" ></property>
                <property name="orderstatus" type="java.lang.String" column="orderstatus" ></property>
                <property name="discontinued" column="discontinued" ></property>
                <property name="discontinuereason" type="java.lang.String" column="discontinuereason" ></property>
                <property name="discontinuationreasons" type="java.lang.String" column="discontinuationreasons" ></property>
                <property name="associateddiagnosis" type="java.lang.String" column="associateddiagnosis"
			length="255"></property> 
                <property name="patientinstructions" type="java.lang.String" column="patientinstructions"
			length="255"></property> 
                <property name="pharmacistinstructions" type="java.lang.String" column="pharmacistinstructions"
			length="255"></property>
                <property name="approvalrequired" column="approvalrequired" ></property>
	</class>


</hibernate-mapping>
