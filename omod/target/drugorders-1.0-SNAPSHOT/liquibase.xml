            <column name="dose" type="int"></column>
            <column name="quantity" type="int"></column>
            <column name="duration" type="int"></column>            
            <column name="associateddiagnosis" type="varchar(255)"></column>
            <column name="patientinstructions" type="varchar(255)"></column>
            <column name="pharmacistinstructions" type="varchar(255)"></column> -->
            
        </createTable>
    </changeSet>
       
</databaseChangeLog>